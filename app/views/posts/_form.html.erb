
<%= form_for(@post) do |f| %>

  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.text_area  :title %>
  </div>
 <div class="field">

            <%= f.rich_text_area :body %>
        </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
